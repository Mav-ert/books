<!DOCTYPE html>   
<html>   
<body>   
<% flash.each do |type, msg| %>
  <div>
    <%= msg %>
  </div>
<% end %>
 <div class="container"> 
 <h1>Books</h1>    
      <br>   
    <table border="2">   
      <thead>   
      <tr>   
        <th>Name</th>   
        <th>Author</th>   
      </tr>   
      </thead>   
      <tbody>   
      <% @books.each do |book| %> 
          <tr>   
            <td><%= book.title %></td>
            <td><%= book.author %></td>     
               <div>   
               <td>   
                <%=button_to "Show", book, method: :get %>
                <%=button_to "Edit", edit_book_path(book),method: :get %>
                <%=button_to "Destroy", book_path(book),method: :delete,data: { confirm: "Are you sure?" }%>
              </div>   
            </td>   
          </tr>   
      <% end %>   
      </tbody>   
    </table>  
    <%=button_to "Add a Book", new_book_path,method: :get %> 
    </div>   
  </body>   
</html>  