<%= form_with model: book do |form| %>
    <div>
        <%= form.label :title %><br>
        <%= form.text_field :title %>
        <% book.errors.full_messages_for(:title).each do |message| %>
        <div><%= message %></div>
        <% end %>
    </div>

    <div>
        <%= form.label :author %><br>
        <%= form.text_area :author %>
        <% book.errors.full_messages_for(:author).each do |message| %>
        <div><%= message %></div>
        <% end %>
    </div>

    <div>
        <%= form.label :genre %><br>
        <%= form.select :genre,["Classic","Crime/Detective","Epic","Fable","Fairy Tale", "Fantasy", "Folktale", "Gothic", "Historical Fiction", "Horror", "Comedy", "Legend","Mystery", "Romance", "Satire","Science Fiction", "Biography","Memoir", "Textbook"] %><br>
        <% book.errors.full_messages_for(:genre).each do |message| %>
        <div><%= message %></div>
        <% end %>
    </div>

    <div>
        <%= form.label :price %><br>
        <%= form.text_area :price %>
        <% book.errors.full_messages_for(:price).each do |message| %>
        <div><%= message %></div>
        <% end %>
    </div>

    <div>
        <%= form.label :published_date %><br>
        <%= form.text_area :published_date %>
        <% book.errors.full_messages_for(:published_date).each do |message| %>
        <div><%= message %></div>
        <% end %>
    </div>

    <div>
        <%= form.submit %>
    </div>
<% end %>